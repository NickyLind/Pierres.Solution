@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<div class="subHeader">Add a new flavor</div>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @if((ViewBag.TreatId as SelectList).Any())
  {
  @Html.Label("select treat")
  @Html.DropDownList("TreatId", "~Select an option~")
  }
  <input type="submit" value="add a new flavor" />
}
<p>Show @Html.ActionLink("all flavors", "Index")</p>