@{
  Layout = "_Layout";
}

@using Pierres.Models;
@model List<Pierres.Models.Flavor>;

<div class="header">Flavors</div>

@if(@Model.Count == 0)
{
  <div class="subHeader">No Flavors have been added yet. sad face.</div>
}

<ul>
  @foreach(Flavor flavor in Model)
  {
    <li>@Html.ActionLink($"{flavor.Name}", "Details", new { id = flavor.FlavorId })</li>
  }
</ul>
<p>Add a @Html.ActionLink("new flavor", "Create")</p>
<p>Return to the @Html.ActionLink("Home Page", "Index", "Home")</p>