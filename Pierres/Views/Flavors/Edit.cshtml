@{
  Layout = "_Layout";
}

@model Pierres.Models.Flavor

<div class="header">Edit</div>

<div class="subHeader">Edit this Flavor: @Html.DisplayFor(model => model.Name)</div>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.FlavorId)
  @foreach (var join in Model.JoinEntities)
  {
      @Html.Hidden("joinId", @join.FlavorTreatId)
  }

  @Html.LabelFor(model => model.Name)
  @Html.EditorFor(model => model.Name)
  @if((ViewBag.TreatId as SelectList).Any())
  {
  @Html.Label("Select a treat")
  @Html.DropDownList("TreatId", "~Select an option~")
  }
  <input type="submit" value="Save" />
}
<p>Back to @Html.ActionLink("Flavor List", "Index")</p>