@{
  Layout = "_Layout";
}

@using System.Security.Claims

<div class="header">User Account Information</div>
<hr />
@if (User.Identity.IsAuthenticated)
{
  <p> Hello @User.Identity.Name!</p>
  @using (Html.BeginForm("LogOff", "Account"))
  {
    <input type="submit" class="btn" value="log out" />
  }
}
else
{
  <div class="header">Please Log In or Register to edit your treats</div>
  <p>@Html.ActionLink("Register", "Register")</p>
  <p>@Html.ActionLink("Log in", "Login")</p>
}