@{
  Layout = "_Layout";
}

@model Pierres.Models.Treat

<div class="subHeader">Add a new Treat</div>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  
  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @if((ViewBag.FlavorId as SelectList).Any())
  {
  @Html.Label("Select flavor")
  @Html.DropDownList("FlavorId", "~Select an option~")
  }
  <input type="submit" value="Add new treat" />
}

<p>Show all @Html.ActionLink("Treats", "Index")</p>